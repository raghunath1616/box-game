{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["off", "always"],
        "quotes": ["off", "double"],
        "no-plusplus": ["error", {"allowForLoopAfterthoughts": true}],
        "no-unused-vars":["error", {"vars": "all", "args": "after-used", "ignoreRestSiblings": false}],
        "func-names": ["off", "always"]
    }
}